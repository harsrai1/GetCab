<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:padding="20dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="myCab"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_italic"
        android:text="Tap, Ride, and Go!"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAlignment="center" />

    <!-- Input Fields Wrapper -->
    <LinearLayout
        android:id="@+id/inputFieldsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagline"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Name Input -->
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:background="@drawable/input_field_bg"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <!-- Gender Dropdown -->
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_bg"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:background="@drawable/input_field_bg"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:background="@drawable/input_field_bg"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:background="@drawable/input_field_bg"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <!-- Signup Button -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/inputFieldsWrapper"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:background="@drawable/primary_button_bg" />

    <!-- Continue with Google Button -->
    <Button
        android:id="@+id/btnGoogleSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btnSignup"
        android:layout_marginTop="10dp"
        android:background="@drawable/google_button_bg"
        android:text="Continue with Google"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        android:drawableStart="@drawable/google"
        android:drawablePadding="12dp"
        android:padding="10dp"/>

    <!-- Already Have an Account? Login -->
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGoogleSignUp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Already have an account? Login"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_italic"
        android:textStyle="bold"/>

    <!-- Terms & Privacy -->
    <TextView
        android:id="@+id/terms_and_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLogin"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="By signing up, you agree to our\nTerms of Use &amp; Privacy Policy"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_italic"
        android:textAlignment="center" />

</RelativeLayout>
